<div class="container">
  <div class="row">

    <h3>Director #<%= @director.id %></h3>
  </div>

  <div class="row">
    <table class="table">
      <tr>
        <th>
          DOB:
        </th>
        <td>
          <%= @director.dob %>
        </td>
      </tr>

      <tr>
        <th>
          Name:
        </th>
        <td>
          <%= @director.name %>
        </td>
      </tr>

      <tr>
        <th>
          Bio:
        </th>
        <td>
          <%= @director.bio %>
        </td>
      </tr>

      <th>
        Image:
      </th>
      <td>
        <img src="<%= @director.image_url %>" />
      </td>
    </table>
  </div>
</div>
