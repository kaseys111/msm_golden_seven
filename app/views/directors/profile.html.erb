<div class="container">
  <div class="row">

    <h3>Director #<%= @director.id %></h3>
  </div>

  <div class="row">
    <div class="col-md-3">
      <img src="<%= @director.image_url %>" />
    </div>

    <div class="col-md-8">
      <table class="table">
        <tr>
          <th>
            DOB:
          </th>
          <td>
            <%= @director.dob %>
          </td>
        </tr>

        <tr>
          <th>
            Name:
          </th>
          <td>
            <%= @director.name %>
          </td>
        </tr>

        <tr>
          <th>
            Bio:
          </th>
          <td>
            <%= @director.bio %>
          </td>
        </tr>

      </table>
    </div>
  </div>
</div>
