<div class="container">
  <div class="row">
    <form action="/movies/<%= @movie.id %>/updated">

      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= @movie.title %>">
      </div>

      <div class="form-group">
        <label for="year">Year</label>
        <input type="text" id="year" name="year" value="<%= @movie.year %>">
      </div>

      <div class="form-group">
        <label for="duration">Duration (in minutes)</label>
        <input type="text" id="duration" name="duration" value="<%= @movie.duration %>">
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" id="description" name="description" value="<%= @movie.description %>">
      </div>

      <div class="form-group">
        <label for="image_url">Image URL</label>
        <input type="text" id="image_url" name="image_url" value="<%= @movie.image_url %>">
      </div>

      <div class="form-group">
        <label for="director">Director</label>
        <select class="form-control" id="director" name="director">

          <% if @movie.director_id == nil || @movie.director_id == 0 %>
            <option selected>-</option>

          <% else %>
            <option selected value="<%= @movie.director_id %>">
              <%= @movie.director_id %>
            </option>

          <% end %>

          <% @alldirectors.each do |director| %>
            <option value="<%= director.id %>">
              <%= director.name %>
            </option>
          <% end %>
        </select>
      </div>

      <button>Update Movie</button>
    </form>
  </div>

</div>
