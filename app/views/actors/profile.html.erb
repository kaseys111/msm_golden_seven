<div class="container">
  <div class="row">

    <h3>Actor #<%= @actor.id %></h3>
  </div>

  <div class="row">
    <div class="col-md-3">
      <img src="<%= @actor.image_url %>" />
    </div>

    <div class="col-md-8">
      <table class="table">
        <tr>
          <th>
            DOB:
          </th>
          <td>
            <%= @actor.dob %>
          </td>
        </tr>

        <tr>
          <th>
            Name:
          </th>
          <td>
            <%= @actor.name %>
          </td>
        </tr>

        <tr>
          <th>
            Bio:
          </th>
          <td>
            <%= @actor.bio %>
          </td>
        </tr>

      </table>
    </div>
  </div>
</div>
