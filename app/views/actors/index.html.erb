<div class="container">

  <div class="row">
    <a href="/new_actor" class="btn btn-primary">Add New Actor</a>
  </div>

  <div class="row">

    <table class="table">
      <tr>
        <th>
          Image
        </th>
        <th>
          DOB
        </th>
        <th>
          Name
        </th>
        <th>
          Bio
        </th>
      </tr>

      <% @allactors.each do |actor| %>
      <tr>
        <td>
          <img src="<%= actor.image_url %>" height=70 />
        </td>
        <td>
          <%= actor.dob %>
        </td>
        <td>
          <%= actor.name %>
        </td>
        <td>
          <% if actor.bio != nil && actor.bio != "" %>
            <%= actor.bio[0..25] %>
            <% if actor.bio.length >25 %>
              ...
            <% end %>
          <% else %>
            No bio
          <% end %>
        </td>
        <td>
          <a href="/actors/<%= actor.id %>">Profile</a>
          <a href="/actors/<%= actor.id %>/edit">Edit</a>
          <a href="/actors/<%= actor.id %>/delete">Delete</a>
        </td>
      </tr>
      <% end %>

      </table>
    </div>
</div>
